pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }
       stage('JUnit Test') {
                    steps {
                        dir('demo1') {
                            sh 'mvn clean test'
                        }
                    }
                }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Default Maven'
                    dir('demo1') { // Ensure the correct directory for pom.xml
                        withSonarQubeEnv() { // Ensure SonarQube server is configured in Jenkins
                            sh "${mvn}/bin/mvn clean verify sonar:sonar " +
                               "-Dsonar.projectKey=Abdesslem012_PI_TEST " +
                               "-Dsonar.projectName='PI_TEST' " +
                               "-Dsonar.jacoco.reportPaths=target/jacoco.exec"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
