pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                dir('demo1') {
                    sh 'mvn clean package' // Build the application
                }
            }
        }
        stage('JUnit Test') {
            steps {
                dir('demo1') {
                    sh 'mvn clean test' // Run JUnit tests
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
