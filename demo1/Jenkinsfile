pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Default Maven' // Ensure this tool name matches your Jenkins configuration
                    dir('demo1') { // Ensure 'demo1' is the correct directory for your Maven project
                        withSonarQubeEnv('SonarQube') { // Specify the SonarQube server name if needed
                            sh "${mvn}/bin/mvn sonar:sonar " +
                               "-Dsonar.projectKey=Abdesslem012_PI_TEST_5eda0981-a32a-4f75-8fc6-19a318c50e9a " +
                               "-Dsonar.projectName='PI_TEST' " + // Removed quotes around project name
                               "-Dsonar.sources=src/main/java" // Optionally specify source directory
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
