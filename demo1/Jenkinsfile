pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Default Maven'
                    dir('pi_test') { // Change to your project directory
                        withSonarQubeEnv() {
                            sh "${mvn}/bin/mvn sonar:sonar " +
                               "-Dsonar.projectKey=Abdesslem012_PI_TEST_5eda0981-a32a-4f75-8fc6-19a318c50e9a " +
                               "-Dsonar.projectName='PI_TEST'"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'SonarQube analysis completed successfully!'
        }
        failure {
            echo 'SonarQube analysis failed. Please check the logs.'
        }
    }
}
